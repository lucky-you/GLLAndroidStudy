<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivGoodSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_6"
        android:padding="@dimen/spacing_10"
        android:src="@drawable/ic_grey_choice" />

    <ImageView
        android:id="@+id/ivGoodUrl"
        android:layout_width="@dimen/spacing_70"
        android:layout_height="@dimen/spacing_70"
        android:layout_margin="@dimen/spacing_5"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:layout_marginRight="@dimen/spacing_10">

            <TextView
                android:id="@+id/tvGoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="20å…ƒ"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_good_number_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumberReduce"
                    android:layout_width="@dimen/spacing_30"
                    android:layout_height="@dimen/spacing_20"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/text_color_333"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/spacing_1"
                    android:layout_height="@dimen/spacing_20"
                    android:background="@color/text_color_666" />

                <TextView
                    android:id="@+id/tvGoodNumber"
                    android:layout_width="@dimen/spacing_30"
                    android:layout_height="@dimen/spacing_20"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_color_333"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/spacing_1"
                    android:layout_height="@dimen/spacing_20"
                    android:background="@color/text_color_666" />

                <TextView
                    android:id="@+id/tvNumberAdd"
                    android:layout_width="@dimen/spacing_30"
                    android:layout_height="@dimen/spacing_20"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/text_color_333"
                    android:textSize="13sp" />


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
