<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />


    <com.gll.gllandroidstudy.view.CircleProgressView
        android:id="@+id/circleProgressView"
        android:layout_width="@dimen/spacing_60"
        android:layout_height="@dimen/spacing_60"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/spacing_10" />

    <com.gll.gllandroidstudy.view.LineChartView
        android:id="@+id/mLineChartView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_140" />

    <com.gll.gllandroidstudy.view.PieChartView
        android:id="@+id/pieChartView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/spacing_10" />


</LinearLayout>