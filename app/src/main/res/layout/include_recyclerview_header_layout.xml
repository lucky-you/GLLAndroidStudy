<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_140">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wall12" />

        <LinearLayout
            android:layout_width="@dimen/spacing_250"
            android:layout_height="@dimen/spacing_30"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/shape_search_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_10"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/spacing_4"
                android:text="请输入搜索关键字"
                android:textColor="@color/text_color_999"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
