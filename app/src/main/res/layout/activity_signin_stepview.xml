<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.gll.gllandroidstudy.view.JudgeNestedScrollView
        android:id="@+id/nestScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banner_imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_200"
                android:scaleType="centerCrop"
                android:src="@drawable/wall06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_44"
                android:gravity="center"
                android:text="以上是头部banner的布局"
                android:textColor="@color/color_a462ff"
                android:textSize="@dimen/sp_14" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_150"
                android:scaleType="centerCrop"
                android:src="@drawable/wall06" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_150"
                android:scaleType="centerCrop"
                android:src="@drawable/wall10" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_150"
                android:scaleType="centerCrop"
                android:src="@drawable/wall11" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_150"
                android:scaleType="centerCrop"
                android:src="@drawable/wall12" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_150"
                android:scaleType="centerCrop"
                android:src="@drawable/wall06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_44"
                android:gravity="center"
                android:text="以上是内容的布局"
                android:textColor="@color/color_a462ff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </com.gll.gllandroidstudy.view.JudgeNestedScrollView>

    <LinearLayout
        android:id="@+id/ll_top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_20"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40">

            <ImageView
                android:id="@+id/iv_back_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_10"
                android:src="@drawable/ic_white_back_return" />


            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="商品详情"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_collection_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_10"
                android:src="@drawable/ic_collection_white" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
