<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.gll.gllandroidstudy.activity.CacheActivity.Presenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40"
            android:gravity="center"
            android:onClick="@{presenter.onClickAddItem}"
            android:text="AddItem"
            android:textColor="@color/text_color_333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_40"
            android:gravity="center"
            android:onClick="@{presenter.onClickRemoveItem}"
            android:text="RemoveItem"
            android:textColor="@color/text_color_333"
            android:textSize="14sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/cache_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
    </LinearLayout>
</layout>
