<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <com.gll.gllandroidstudy.view.BannerLayout
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:bannerDelaySecond="5"
        app:bannerPointDrawableSelected="@drawable/shape_circle_red_bg"
        app:bannerPointDrawableUnselected="@drawable/shape_circle_grey_bg"
        app:bannerPointGravity="center" />


</LinearLayout>