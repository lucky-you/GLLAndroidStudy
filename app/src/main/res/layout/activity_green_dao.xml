<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAddNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="增加数量"
            android:textColor="@color/text_color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvReduceNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="减少数量"
            android:textColor="@color/text_color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvEditNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改数量"
            android:textColor="@color/text_color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvQueriesNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查询数量"
            android:textColor="@color/text_color_666"
            android:textSize="14sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1"
        android:background="@color/divide_line_color" />

    <TextView
        android:id="@+id/tvCurrentNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:text="当前数量："
        android:textColor="@color/text_color_666"
        android:textSize="14sp" />


</LinearLayout>