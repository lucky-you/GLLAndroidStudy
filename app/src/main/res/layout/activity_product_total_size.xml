<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_below="@+id/rl_titlebar"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_140"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/wall11" />

        <include layout="@layout/include_recyclerview_layout" />


    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_titlebar"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_140"
                android:scaleType="centerCrop"
                android:src="@drawable/wall11" />

            <include layout="@layout/include_recyclerview_layout" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llSizeNumberLayout"
        android:layout_width="@dimen/spacing_44"
        android:layout_height="@dimen/spacing_44"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/spacing_16"
        android:layout_marginBottom="@dimen/spacing_40"
        android:background="@drawable/shape_circle_backgeound"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCurrentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_6"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/text_color_333"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/spacing_20"
            android:layout_height="@dimen/spacing_1"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_color_333" />


        <TextView
            android:id="@+id/tvTotalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/text_color_333"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>